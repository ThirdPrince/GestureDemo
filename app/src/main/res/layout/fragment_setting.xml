<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fancy="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
             >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/gesture_password"
            android:drawableLeft="@drawable/ssmm"
            android:layout_marginLeft="10dp"
            android:drawablePadding="10dp"
            android:textSize="17sp"
            android:layout_weight="1"
            android:text="手势密码(应用启动时)"/>
    <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/gesture_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:longClickable="false"
            android:textColor="#ffffff"
          />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="5dp"
            android:background="@color/cardview_shadow_start_color"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/gesture_password_by_money"
                android:drawableLeft="@drawable/ssmm"
                android:layout_marginLeft="10dp"
                android:drawablePadding="10dp"
                android:textSize="17sp"
                android:layout_weight="1"
                android:text="手势密码(进入理财时)"/>
        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/gesture_switch_by_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:longClickable="false"
                android:textColor="#ffffff"
                />
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_marginTop="5dp"
            android:background="@color/cardview_shadow_start_color"/>
    <LinearLayout
            android:id="@+id/modify_gesture_pwd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="修改手势密码"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:longClickable="false"
                android:layout_marginEnd="15dp"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/mine_arrow"
                />
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/cardview_shadow_start_color"/>
</LinearLayout>